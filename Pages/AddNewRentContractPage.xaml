<Page x:Class="RetailRentingApp.Pages.AddNewRentContractPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RetailRentingApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Добавить новый договор">
    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Выберите клиента:"
                       HorizontalAlignment="Center"
                       Style="{StaticResource CommonBlock}"></TextBlock>
                <ComboBox DisplayMemberPath="CompanyName"
                          Name="ComboCustomers"></ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Content="Продолжить" Name="BtnAddContract"
                        Click="BtnAddContract_Click"></Button>
                <Button Content="Отмена" Name="BtnCancel"
                        Click="BtnCancel_Click"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
